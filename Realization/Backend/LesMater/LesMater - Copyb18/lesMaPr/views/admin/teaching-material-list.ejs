<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (materials.length > 0) { %>
                    <div class="grid">
                        <% for (let material of materials) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= material.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= material.imageUrl %>" alt="<%= material.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= material.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= material.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-teaching-material/<%= material._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-teaching-material" method="POST">
                                        <input type="hidden" value="<%= material._id %>" name="materialId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Teaching Materials Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>